<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mrd.sealmachine.ui.fragment.UserFragment">


    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/user_login_icon"
        android:text="当前用户" />

    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:background="@drawable/user_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="用户"
            />

        <TextView
            android:id="@+id/user_tv_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="粤E 19965"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_username"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal"
        android:background="@drawable/user_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="版本检测"
            />

        <TextView
            android:id="@+id/user_softwareversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="1.0"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/user_downup"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:textColor="#ffffff"
        android:layout_above="@+id/tv_customer_phone"
        android:layout_marginBottom="25dip"
        android:textSize="20sp"
        android:background="@drawable/bt_downout_bg"
        android:text="退出登录"
        />

    <TextView
        android:id="@+id/tv_customer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="客服电话:0757 666 7777"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip"
        />


</RelativeLayout>
